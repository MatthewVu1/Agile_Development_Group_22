<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Custom Workout Plans</title>
    <link rel="stylesheet" href="css/yi_stylesheet.css">
    <script src="js/planscripts.js" defer></script>
</head>


<body>
    <header class="center">
        <h1>Custom Workout Plan</h1>
        <nav>
            <ul>
                <li><a>Running/Weightlifting<br>Tracking</a></li>
                <li><a href="yi_index.ejs" title="Track your Weight">Weight Tracking</a></li>
            </ul>
        </nav>
    </header>


    <main>
        <div class="entries">
            <h2>My Entries</h2>
            <ul class='plan'>
                <% for (const facts of plans) { %>
                <li>
                    <%= facts.entryid %> <%= facts.title %>
                    <%= facts.plan %>
                </li>
                <% } %>
            </ul>
        </div>

        <!-- <div class="text-box">
            <textarea class ='text-area plans' placeholder="Please enter your plan"></textarea> -->
            <div class="text-box">
                <form action="/newplan" method="POST">
                    <textarea class ='text-area plans' name="plan" placeholder="Please enter your plan"></textarea>
                    <input type="text" name="title" placeholder="Enter the title of your plan"/>
                    <input type="submit" value="Click here to submit the form"/>
                </form>
                <form action="/editplan" method="POST">
                    <input type="text" name="plan" placeholder="Enter your edited plan"/>
                    <input type="text" name="id" placeholder="Enter the entry # you want to change"/>
                    <input type="submit" value="Click here to edit"/>
                </form>
                <form action="/deleteplan" method="POST">
                    <input type="text" name="id" placeholder="Enter the entry # you want to remove"/>
                    <input type="submit" value="Click here to remove"/>
                </form>
            </div>
        

        <div class="bottom center">
             <button class="plan_button" id="plan" type="button">Add Plan
        </button>
        <button class="red_button" id="del" type="button">Clear
        </button>
        </div>
    </main>
</body>

</html>